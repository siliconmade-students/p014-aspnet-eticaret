@model List<CartProduct>

<div class="container">
    <h1>Sepet</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ürün</th>
                <th scope="col">Adet</th>
                <th scope="col">Fiyat</th>
                <th scope="col">Toplam Tutar</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Product.Title</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C2")</td>
                    <td>@((item.Price * item.Quantity).ToString("C2"))</td>
                    <td>
                        <a href="#" class="btn btn-danger">Sepetten Kaldır</a>
                    </td>
                </tr>
            }
            <tr>
                <th colspan="4" class="text-end">Toplam Tutar</th>
                <td>
                    @{
                        var toplamTutar = Model.Sum(item => item.Quantity * item.Price);
                        var kdv = toplamTutar * 0.18m;
                    }
                    @toplamTutar.ToString("C2")
                </td>
            </tr>
            <tr>
                <th colspan="4" class="text-end">Toplam KDV</th>
                <td>@kdv.ToString("C2")</td>
            </tr>
            <tr>
                <th colspan="4" class="text-end">Toplam KDV'li Tutar</th>
                <td>@((toplamTutar + kdv).ToString("C2"))</td>
            </tr>
        </tbody>
    </table>
</div>