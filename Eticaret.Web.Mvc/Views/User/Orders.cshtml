@model List<Order>

<div class="container">
    <h1>Siparişlerim</h1>
    @if (Model.Count == 0)
    {
        <text>Siparişiniz bulunmamaktadır.</text>
    }
    else
    {
        <text>Toplam @Model.Count sipariş bulunmaktadır.</text>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Sipariş No</th>
                    <th scope="col">Tarih</th>
                    <th scope="col">Toplam Tutar</th>
                    <th scope="col">Durum</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.OrderNumber</th>
                        <td>@item.CreatedAt.ToString()</td>
                        <td>@item.TotalPrice.ToString("C2")</td>
                        <td>@item.OrderStatus</td>
                        <td>
                            <a asp-controller="User" asp-action="OrderDetail" asp-route-id="@item.Id" class="btn btn-sm btn-info btn-lg btn-block">Sipariş Detayı</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>