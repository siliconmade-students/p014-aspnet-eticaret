@{
    ViewData["Title"] = "Home Page";
}

<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Shop in style</h1>
            <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
        </div>
    </div>
</header>

<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <h1 class="text-center mb-5">Son Ürünler</h1>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (ProductDto item in ViewBag.LastProducts)
            {
                <div class="col mb-5">
                    <partial name="_ProductItem" model="@item">
                </div>
            }
        </div>

        <h1 class="text-center mb-5">Popüler Ürünler</h1>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (ProductDto item in ViewBag.PopularProducts)
            {
                <div class="col mb-5">
                    <partial name="_ProductItem" model="@item">
                </div>
            }
        </div>
    </div>
</section>